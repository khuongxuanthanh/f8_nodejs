<div class="mt-4">
    <div>
        <a href="/me/stored/solarsystem">Post list</a>
        <h3>Deleted post</h3>
    </div>
    <table class="table mt-4">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Post name</th>
            <th scope="col" colspan="2">Delete time </th>
        </tr>
    </thead>
    <tbody>
        {{#each courses}}
        <tr>
            <th scope="row">{{sum @index 1}}</th>
            <td>{{this.name}}</td>
            <td>{{this.deletedAt}}</td>
            <td>
                <a data-id="{{this._id}}" class="btn btn-link btn-restore" data-id="{{this._id}}">Restore</a>
                <a class="btn btn-link" data-toggle="modal" data-id="{{this._id}}" 
                data-target="#delete-solarsystem-modal">
                    Delete
                </a>
            </td>
        </tr> 
        {{else}}
            <tr>
                <td colspan="3">
                    Empty trash can.
                    <a href="/me/stored/solarsystem">Post list</a>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>
</div>

<!-- Modal -->
<div class="modal fade" id="delete-solarsystem-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete post</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>This action cannot be undone. Do you still want to delete this post?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button id="btn-delete-solarsystem" type="button" class="btn btn-danger">Delete</button>
            </div>
        </div>
    </div>
</div>

<form name="delete-solarsystem-form" method="POST"></form>
<form name="restore-solarsystem-form" method="POST"></form>

<script>

    document.addEventListener('DOMContentLoaded', function() {
        var courseId;
        var deleteForm = document.forms['delete-solarsystem-form'];
        var restoreForm = document.forms['restore-solarsystem-form'];
        var btnDeleteSolarsystem = document.getElementById('btn-delete-solarsystem');
        var restoreBtn = $('.btn-restore');
        
        // when delete solarSystem btn clicked
        $('#delete-solarsystem-modal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            courseId = button.data('id');
        });

        btnDeleteSolarsystem.onclick = function () {
            deleteForm.action = '/solarSystem/' + courseId + '/force?_method=DELETE';
            deleteForm.submit();
        }
        
        // Restore btn clicked
        restoreBtn.click(function (e) {
            e.preventDefault();

            var courseId = $(this).data('id');
            restoreForm.action = '/solarSystem/' + courseId + '/restore?_method=PATCH';
            restoreForm.submit();
        });
    });
</script>